{
    "name": "reasonligo-vscode",
    "displayName": "ReasonLigo",
    "description": "A syntax highlighter for ReasonLigo for developing smartcontracts with Tezos",
    "publisher": "JamesBachini",
	"icon": "reasonligo-vscode.png",
    "version": "1.0.1",
    "engines": {
        "vscode": "^1.42.0"
    },
    "keywords": [
        "Tezos",
        "LIGO",
        "Reason",
        "ReasonLigo",
        "Reason Ligo",
        ".rl",
        ".rligo"
    ],
    "homepage": "https://jamesbachini.com",
    "repository": {
        "type": "git",
        "url": "https://github.com/jamesbachini/ReasonLigo-VSCode.git"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "reasonligo",
            "aliases": ["ReasonLigo", "reasonligo"],
            "extensions": [".rl"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "reasonligo",
            "scopeName": "source.reasonligo",
            "path": "./syntaxes/reasonligo.tmLanguage.json"
        }]
    }
}